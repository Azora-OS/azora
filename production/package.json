{
  "name": "azora-production",
  "version": "1.0.0",
  "description": "Azora OS Production Services",
  "main": "index.js",
  "scripts": {
    "test": "jest --runInBand --detectOpenHandles",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "start:auth": "node auth-service/index.js",
    "start:education": "node education-service/index.js",
    "start:payment": "node payment-service/index.js",
    "start:gateway": "node api-gateway/index.js",
    "dev:auth": "nodemon auth-service/index.js",
    "dev:education": "nodemon education-service/index.js",
    "dev:payment": "nodemon payment-service/index.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node prisma/seed.js",
    "db:studio": "prisma studio",
    "start:all": "concurrently \"npm run start:auth\" \"npm run start:education\" \"npm run start:payment\" \"npm run start:gateway\"",
    "deploy:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "deploy:build": "docker-compose -f docker-compose.prod.yml build",
    "deploy:stop": "docker-compose -f docker-compose.prod.yml down",
    "deploy:logs": "docker-compose -f docker-compose.prod.yml logs -f",
    "health:check": "curl -f http://localhost:4000/health",
    "prod:setup": "cp .env.production .env && npm run db:generate && npm run db:migrate && npm run db:seed"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcryptjs": "^2.4.3",
    "concurrently": "8.2.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "prisma": "^6.19.0",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testTimeout": 10000
  },
  "keywords": [
    "azora",
    "microservices",
    "education",
    "finance"
  ],
  "author": "Azora Team",
  "license": "MIT"
}
