{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert",
        "ubuntu"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "education",
        "finance",
        "marketplace",
        "security",
        "infrastructure",
        "ai-family",
        "governance",
        "docs",
        "deps"
      ]
    ],
    "subject-case": [2, "never", ["upper-case"]],
    "subject-empty": [2, "never"],
    "subject-full-stop": [2, "never", "."],
    "header-max-length": [2, "always", 100]
  }
}
