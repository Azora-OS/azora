{
  "name": "ascend-electron",
  "version": "0.1.0",
  "description": "Ascend IDE - Citadel's Public IDE with Constitutional AI",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "webpack --config webpack.main.config.js --mode development --watch",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js --mode development",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "webpack --config webpack.main.config.js --mode production",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "start": "electron .",
    "package": "electron-builder",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.5.0",
    "@types/fs-extra": "^11.0.1",
    "@types/lodash": "^4.14.195",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "axios": "^1.13.2",
    "electron": "^25.0.0",
    "electron-updater": "^6.1.4",
    "fs-extra": "^11.1.1",
    "lodash": "^4.17.21",
    "monaco-editor": "^0.44.0",
    "openai": "^4.0.0",
    "pg": "^8.11.0",
    "pg-mem": "^3.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@types/node": "^20.4.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^8.2.0",
    "css-loader": "^6.8.0",
    "electron-builder": "^24.6.0",
    "html-webpack-plugin": "^5.5.3",
    "monaco-editor-webpack-plugin": "^7.1.0",
    "style-loader": "^3.3.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.1.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.0"
  },
  "build": {
    "appId": "com.citadel.ascend",
    "productName": "Ascend IDE",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}