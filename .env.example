# AZORA OS - ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# DO NOT commit .env files to version control

# ============================================
# CORE INFRASTRUCTURE
# ============================================

# Node Environment
NODE_ENV=development

# Application Ports
PORT=3000
API_GATEWAY_PORT=4000
AUTH_SERVICE_PORT=4001
MINT_SERVICE_PORT=4002
FORGE_SERVICE_PORT=4003
NEXUS_SERVICE_PORT=4004
EDUCATION_SERVICE_PORT=4006
LMS_SERVICE_PORT=4007
AEGIS_SERVICE_PORT=4008
COVENANT_SERVICE_PORT=4009
CHRONICLE_SERVICE_PORT=4400
ORACLE_SERVICE_PORT=3005

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL Database
DATABASE_URL=postgresql://azora_user:azora_password@localhost:5432/azora_dev
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ============================================
# SECURITY & AUTHENTICATION
# ============================================

# JWT Secrets (CRITICAL: Generate strong secrets for production)
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_IN_PRODUCTION
JWT_REFRESH_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_IN_PRODUCTION
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_IN_PRODUCTION
SESSION_MAX_AGE=86400000

# Encryption Keys
ENCRYPTION_KEY=CHANGE_THIS_TO_A_32_CHARACTER_ENCRYPTION_KEY

# ============================================
# BLOCKCHAIN & CRYPTO
# ============================================

# Chronicle Protocol
CHRONICLE_CONTRACT_ADDRESS=
CHRONICLE_NETWORK=polygon-mumbai
CHRONICLE_RPC_URL=https://rpc-mumbai.maticvigil.com
CHRONICLE_PRIVATE_KEY=

# Ethereum/Polygon
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_KEY

# ============================================
# AI SERVICES
# ============================================

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Anthropic Claude (if used)
ANTHROPIC_API_KEY=sk-ant-...

# ============================================
# EXTERNAL SERVICES
# ============================================

# Email Service
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-password
SMTP_FROM=noreply@azora.es

# Storage (S3-compatible)
STORAGE_ENDPOINT=https://s3.amazonaws.com
STORAGE_ACCESS_KEY=
STORAGE_SECRET_KEY=
STORAGE_BUCKET=azora-storage
STORAGE_REGION=us-east-1

# ============================================
# MONITORING & OBSERVABILITY
# ============================================

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================
# SERVICE ENDPOINTS
# ============================================

# Core Services
AEGIS_ENDPOINT=http://localhost:4008
NEXUS_ENDPOINT=http://localhost:4004
MINT_ENDPOINT=http://localhost:4002
COVENANT_ENDPOINT=http://localhost:4009
LMS_ENDPOINT=http://localhost:4007
SYNAPSE_ENDPOINT=http://localhost:3006
API_GATEWAY_ENDPOINT=http://localhost:4000

# Constitutional Services
CONSTITUTIONAL_COURT_URL=http://localhost:4500
CONSTITUTIONAL_AI_URL=http://localhost:4501
CHRONICLE_PROTOCOL_URL=http://localhost:4400

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/Disable Features
FEATURE_PHOENIX_PROTOCOL=false
FEATURE_CHRONICLE_BLOCKCHAIN=true
FEATURE_AI_TUTORING=true
FEATURE_MINING_ENGINE=true

# ============================================
# DEVELOPMENT & DEBUGGING
# ============================================

# Debug Mode
DEBUG=false
LOG_LEVEL=info

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# PRODUCTION OVERRIDES
# ============================================

# For production, override these:
# NODE_ENV=production
# DATABASE_URL=<production-database-url>
# REDIS_URL=<production-redis-url>
# JWT_SECRET=<strong-production-secret>
# All secrets should be from secure secret management
