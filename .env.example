# Azora OS - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================
# OpenAI Configuration
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# Pinecone Configuration
# ============================================
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=azora-knowledge

# ============================================
# Data Source APIs
# ============================================
NEWSAPI_KEY=your-newsapi-key-here
ALPHAVANTAGE_KEY=your-alphavantage-key-here
CRYPTO_API_KEY=your-crypto-api-key-here

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/azora_db
POSTGRES_PASSWORD=your-secure-postgres-password-here
REDIS_URL=redis://default:password@host.redislabs.com:port

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=7d
SESSION_SECRET=your-session-secret-key-change-this
ENCRYPTION_KEY=your-encryption-key-32-chars-minimum

# ============================================
# Stripe Payment Configuration
# ============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ============================================
# Service Configuration
# ============================================
NODE_ENV=development
PORT=3001
LOG_LEVEL=info
ENVIRONMENT=development

# ============================================
# Email Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@azora.io

# ============================================
# AWS Configuration (if using AWS services)
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=azora-uploads

# ============================================
# Monitoring & Observability
# ============================================
SENTRY_DSN=your-sentry-dsn-for-error-tracking
DATADOG_API_KEY=your-datadog-api-key
PROMETHEUS_PORT=9090
GF_SECURITY_ADMIN_PASSWORD=your-secure-grafana-admin-password

# ============================================
# Feature Flags
# ============================================
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# ============================================
# Security Headers
# ============================================
ENABLE_HELMET=true
ENABLE_CSRF_PROTECTION=true
ENABLE_CONTENT_SECURITY_POLICY=true

# ============================================
# Logging
# ============================================
LOG_FORMAT=json
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# ============================================
# Cache Configuration
# ============================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ============================================
# Session Configuration
# ============================================
SESSION_TIMEOUT=1800000
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# ============================================
# API Configuration
# ============================================
API_RATE_LIMIT=100
API_TIMEOUT=30000
API_MAX_BODY_SIZE=10mb

# ============================================
# Security Configuration
# ============================================
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL_CHARS=true

# ============================================
# Audit Logging
# ============================================
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=90

# ============================================
# Data Retention
# ============================================
DATA_RETENTION_DAYS=365
GDPR_COMPLIANCE_ENABLED=true

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000
AI_MODERATION_ENABLED=true

# Ubuntu AI Personality
UBUNTU_PERSONALITY=true
COLLECTIVE_WISDOM_MODE=true