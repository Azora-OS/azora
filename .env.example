# Azora OS Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# CORE CONFIGURATION
# ============================================
NODE_ENV=development
PORT=4000
API_URL=http://localhost:4000

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/azora_db"

# Service-specific databases
AUTH_DATABASE_URL="postgresql://user:password@localhost:5432/azora_auth"
EDUCATION_DATABASE_URL="postgresql://user:password@localhost:5432/azora_education"
MINT_DATABASE_URL="postgresql://user:password@localhost:5432/azora_mint"
FORGE_DATABASE_URL="postgresql://user:password@localhost:5432/azora_forge"
SAPIENS_DATABASE_URL="postgresql://user:password@localhost:5432/azora_sapiens"
FAMILY_DATABASE_URL="postgresql://user:password@localhost:5432/azora_family"

# Redis
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="your-refresh-token-secret-change-this"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Encryption
ENCRYPTION_KEY="your-32-character-encryption-key"

# Session
SESSION_SECRET="your-session-secret-change-this"

# ============================================
# AI SERVICES
# ============================================
# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-4"
OPENAI_TEMPERATURE=0.7

# AI Family Service
AI_FAMILY_ENABLED=true
ELARA_PERSONALITY_MODE="nurturing"

# ============================================
# PAYMENT SERVICES
# ============================================
# Stripe
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# PayPal (optional)
PAYPAL_CLIENT_ID=""
PAYPAL_CLIENT_SECRET=""
PAYPAL_MODE="sandbox"

# ============================================
# BLOCKCHAIN & CRYPTO
# ============================================
# Ethereum
ETH_NETWORK="goerli"
ETH_RPC_URL="https://goerli.infura.io/v3/your-project-id"
ETH_PRIVATE_KEY=""

# AZR Token
AZR_CONTRACT_ADDRESS=""
AZR_DECIMALS=18

# Mining
MINING_ENABLED=true
MINING_DIFFICULTY=4
POK_REWARD_RATE=10

# ============================================
# EMAIL SERVICES
# ============================================
# SMTP
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="noreply@azora.world"

# SendGrid (alternative)
SENDGRID_API_KEY=""

# ============================================
# STORAGE & CDN
# ============================================
# AWS S3
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET="azora-storage"

# Cloudinary (alternative)
CLOUDINARY_CLOUD_NAME=""
CLOUDINARY_API_KEY=""
CLOUDINARY_API_SECRET=""

# ============================================
# MONITORING & LOGGING
# ============================================
# Sentry
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# Logging
LOG_LEVEL="info"
LOG_FORMAT="json"

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ============================================
# EXTERNAL SERVICES
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GOOGLE_CALLBACK_URL="http://localhost:4000/auth/google/callback"

# GitHub OAuth
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""
GITHUB_CALLBACK_URL="http://localhost:4000/auth/github/callback"

# ============================================
# RATE LIMITING & SECURITY
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN="http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003"

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_AI_TUTOR=true
FEATURE_BLOCKCHAIN=true
FEATURE_MINING=true
FEATURE_MARKETPLACE=true
FEATURE_MOBILE_APP=false

# ============================================
# SERVICE PORTS
# ============================================
API_GATEWAY_PORT=4000
AUTH_SERVICE_PORT=4001
EDUCATION_SERVICE_PORT=4002
MINT_SERVICE_PORT=4003
FORGE_SERVICE_PORT=4004
SAPIENS_SERVICE_PORT=4005
FAMILY_SERVICE_PORT=4006
HEALTH_MONITOR_PORT=4007

# ============================================
# FRONTEND PORTS
# ============================================
STUDENT_PORTAL_PORT=3000
ENTERPRISE_UI_PORT=3001
MARKETPLACE_UI_PORT=3002
PAY_UI_PORT=3003

# ============================================
# DEVELOPMENT
# ============================================
DEBUG=false
VERBOSE_LOGGING=false
MOCK_EXTERNAL_SERVICES=false

# ============================================
# PRODUCTION OVERRIDES
# ============================================
# Uncomment and set for production
# NODE_ENV=production
# API_URL=https://api.azora.world
# CORS_ORIGIN=https://azora.world
# RATE_LIMIT_MAX_REQUESTS=1000
# LOG_LEVEL=warn
