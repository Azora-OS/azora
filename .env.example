# AZORA OS - ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env.local for development

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# ============================================================================
# OAUTH CONFIGURATION (Available to all apps)
# ============================================================================
# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth
NEXT_PUBLIC_GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Apple OAuth (Optional)
NEXT_PUBLIC_APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# OAuth Redirect URIs
NEXT_PUBLIC_OAUTH_REDIRECT_URI=http://localhost:3000/auth/callback

# ============================================================================
# PRICING & PAYMENTS
# ============================================================================
FRAUD_THRESHOLD=70
ENABLE_RATE_LIMITING=true
ENABLE_FRAUD_DETECTION=true

# ============================================================================
# DATABASE (Development)
# ============================================================================
DATABASE_URL=postgresql://localhost:5432/azora_dev
REDIS_URL=redis://localhost:6379

# ============================================================================
# AUTHENTICATION
# ============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=development-secret-change-in-production
JWT_SECRET=development-jwt-secret

# ============================================================================
# EMAIL (Development - Use MailHog or similar)
# ============================================================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_LEARN_TO_EARN=true
ENABLE_CRYPTO_PAYMENTS=true
