datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  message   String
  type      String   @default("info")
  isRead    Boolean  @default(false)
  readAt    DateTime?
  createdAt DateTime @default(now())
  deletedAt DateTime?
  
  @@index([userId])
  @@index([isRead])
  @@map("notifications")
}
