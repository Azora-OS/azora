generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Block {
  id        String   @id @default(uuid())
  index     Int      @unique
  hash      String   @unique
  prevHash  String
  data      String
  timestamp DateTime @default(now())

  @@index([hash])
  @@map("blocks")
}

model Transaction {
  id        String   @id @default(uuid())
  from      String
  to        String
  amount    Float
  hash      String   @unique
  status    String   @default("pending")
  timestamp DateTime @default(now())

  @@index([from])
  @@index([to])
  @@index([status])
  @@map("transactions")
}
