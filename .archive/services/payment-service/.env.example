# Azora Payment Service Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3039
SERVICE_NAME=azora-payment-service

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Database Configuration (if using database)
DATABASE_URL=postgresql://username:password@localhost:5432/azora_payments
REDIS_URL=redis://localhost:6379

# AZR Token Configuration
AZR_MAX_SUPPLY=1000000000
AZR_INITIAL_EXCHANGE_RATE_USD=0.10
AZR_STAKING_ANNUAL_RATE=0.05

# KYC Configuration
KYC_BASIC_LIMIT=1000
KYC_STANDARD_LIMIT=10000
KYC_PREMIUM_LIMIT=50000
KYC_INSTITUTIONAL_LIMIT=1000000

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# External Services
NOTIFICATION_SERVICE_URL=http://localhost:3040
EMAIL_SERVICE_URL=http://localhost:3041
AUDIT_SERVICE_URL=http://localhost:3042

# Compliance Configuration
ENABLE_KYC_VERIFICATION=true
ENABLE_TRANSACTION_MONITORING=true
ENABLE_RISK_SCORING=true
AUTO_FREEZE_HIGH_RISK=false

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/payment-service.log

# Feature Flags
ENABLE_STRIPE_PAYMENTS=true
ENABLE_AZR_TOKENS=true
ENABLE_STAKING=true
ENABLE_MULTI_CURRENCY=true
ENABLE_WEBHOOKS=true

# Development Configuration
DEBUG_MODE=false
MOCK_STRIPE_RESPONSES=false
MOCK_KYC_VERIFICATION=true

# Production Configuration (uncomment for production)
# NODE_ENV=production
# STRIPE_SECRET_KEY=sk_live_your_live_stripe_key
# DATABASE_URL=your_production_database_url
# REDIS_URL=your_production_redis_url
# LOG_LEVEL=warn
# DEBUG_MODE=false
# MOCK_KYC_VERIFICATION=false