// Azora OS - Course Service Schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Course {
  id           String        @id @default(uuid())
  title        String
  description  String?
  instructorId String
  category     String?
  level        CourseLevel   @default(BEGINNER)
  price        Decimal       @default(0) @db.Decimal(10, 2)
  isPublished  Boolean       @default(false)
  thumbnail    String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  deletedAt    DateTime?
  
  modules      CourseModule[]
  
  @@index([instructorId])
  @@index([category])
  @@map("courses")
}

model CourseModule {
  id        String   @id @default(uuid())
  courseId  String
  title     String
  order     Int
  content   String?
  duration  Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  @@index([courseId])
  @@map("course_modules")
}

enum CourseLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}
