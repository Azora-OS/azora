generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Log {
  id        String   @id @default(uuid())
  level     String
  service   String
  message   String
  metadata  String?
  timestamp DateTime @default(now())

  @@index([level])
  @@index([service])
  @@index([timestamp])
  @@map("logs")
}
