generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Alert {
  id        String   @id @default(uuid())
  service   String
  severity  String
  message   String
  resolved  Boolean  @default(false)
  createdAt DateTime @default(now())
  resolvedAt DateTime?

  @@index([service])
  @@index([severity])
  @@map("alerts")
}
