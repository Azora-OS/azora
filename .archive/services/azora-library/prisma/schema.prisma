// Azora OS - azora-library Database Schema
// Ubuntu: "My data strengthens our foundation"

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  id          String   @id @default(uuid())
  title       String
  subtitle    String?
  description String?
  isbn        String?  @unique
  authors     String[]
  publisher   String?
  publishedDate DateTime?
  pageCount   Int?
  categories  String[]
  language    String?  @default("en")
  thumbnail   String?
  previewLink String?
  status      BookStatus @default(AVAILABLE)
  condition   BookCondition @default(GOOD)
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([title])
  @@index([authors])
  @@index([categories])
  @@index([status])
  @@map("books")
}

model BookCopy {
  id          String   @id @default(uuid())
  bookId      String
  copyNumber  Int
  barcode     String   @unique
  status      CopyStatus @default(AVAILABLE)
  condition   BookCondition @default(GOOD)
  location    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  book        Book @relation(fields: [bookId], references: [id], onDelete: Cascade)
  
  @@unique([bookId, copyNumber])
  @@index([barcode])
  @@index([status])
  @@map("book_copies")
}

model Checkout {
  id          String   @id @default(uuid())
  userId      String
  bookCopyId  String
  checkedOutAt DateTime @default(now())
  dueDate     DateTime
  returnedAt  DateTime?
  renewalCount Int      @default(0)
  status      CheckoutStatus @default(ACTIVE)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  bookCopy    BookCopy @relation(fields: [bookCopyId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([bookCopyId])
  @@index([status])
  @@index([dueDate])
  @@map("checkouts")
}

model Reservation {
  id          String   @id @default(uuid())
  userId      String
  bookId      String
  reservedAt  DateTime @default(now())
  expiryDate  DateTime
  status      ReservationStatus @default(PENDING)
  fulfilledAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  book        Book @relation(fields: [bookId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([bookId])
  @@index([status])
  @@index([expiryDate])
  @@map("reservations")
}

model DigitalResource {
  id          String   @id @default(uuid())
  title       String
  description String?
  fileType    String
  fileSize    Int?
  url         String
  accessLevel AccessLevel @default(PUBLIC)
  categories  String[]
  tags        String[]
  downloadCount Int @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([title])
  @@index([categories])
  @@index([accessLevel])
  @@map("digital_resources")
}

model ResourceAccess {
  id          String   @id @default(uuid())
  userId      String
  resourceId  String
  accessedAt  DateTime @default(now())
  duration    Int?     // in seconds
  createdAt   DateTime @default(now())
  
  resource    DigitalResource @relation(fields: [resourceId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([resourceId])
  @@index([accessedAt])
  @@map("resource_access")
}

model LibraryCard {
  id          String   @id @default(uuid())
  userId      String   @unique
  cardNumber  String   @unique
  issuedAt    DateTime @default(now())
  expiryDate  DateTime
  status      CardStatus @default(ACTIVE)
  fineBalance Decimal  @db.Decimal(10, 2) @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([userId])
  @@index([cardNumber])
  @@index([status])
  @@map("library_cards")
}

enum BookStatus {
  AVAILABLE
  CHECKED_OUT
  RESERVED
  MAINTENANCE
  RETIRED
}

enum CopyStatus {
  AVAILABLE
  CHECKED_OUT
  RESERVED
  MAINTENANCE
  DAMAGED
  LOST
}

enum BookCondition {
  NEW
  GOOD
  FAIR
  POOR
  DAMAGED
}

enum CheckoutStatus {
  ACTIVE
  RETURNED
  OVERDUE
  LOST
}

enum ReservationStatus {
  PENDING
  FULFILLED
  CANCELLED
  EXPIRED
}

enum AccessLevel {
  PUBLIC
  STUDENT
  EDUCATOR
  ADMIN
}

enum CardStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  EXPIRED
}

// Constitutional Compliance
model ConstitutionalLog {
  id        String   @id @default(uuid())
  action    String
  userId    String?
  metadata  Json?
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
  @@map("constitutional_logs")
}