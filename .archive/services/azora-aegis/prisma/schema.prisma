generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model KycCheck {
  id        String   @id @default(cuid())
  userId    String
  approved  Boolean
  risk      String
  reason    String?
  timestamp DateTime @default(now())
}

model AmlCheck {
  id        String   @id @default(cuid())
  userId    String
  amount    Float
  flagged   Boolean
  reason    String?
  timestamp DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  eventType String
  details   Json
  createdAt DateTime @default(now())
  userId    String?
}

model SecurityScan {
  id              String   @id @default(cuid())
  target          String
  vulnerabilities Json
  threatLevel     String
  threatScore     Int
  compliant       Boolean
  recommendations Json
  createdAt       DateTime @default(now())
}

model ThreatAlert {
  id          String   @id @default(cuid())
  userId      String
  severity    String
  description String
  anomalies   Json
  resolved    Boolean  @default(false)
  createdAt   DateTime @default(now())
  resolvedAt  DateTime?
}

model PenetrationTest {
  id        String   @id @default(cuid())
  endpoint  String
  results   Json
  passed    Boolean
  createdAt DateTime @default(now())
}

model ConstitutionalCheck {
  id         String   @id @default(cuid())
  action     String
  context    Json
  compliant  Boolean
  violations Json
  createdAt  DateTime @default(now())
}