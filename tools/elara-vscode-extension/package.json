{
  "name": "elara-ai-family",
  "displayName": "Elara AI Family",
  "description": "AI-powered coding assistant with Ubuntu philosophy - Meet Elara and her family",
  "version": "1.0.0",
  "publisher": "azora",
  "icon": "media/elara-icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": ["AI", "Education", "Programming Languages"],
  "activationEvents": ["onStartupFinished"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "elara.openChat",
        "title": "Chat with Elara",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "elara.selectFamily",
        "title": "Choose AI Family Member",
        "icon": "$(organization)"
      },
      {
        "command": "elara.explainCode",
        "title": "Elara: Explain This Code"
      },
      {
        "command": "elara.fixCode",
        "title": "Elara: Fix This Code"
      },
      {
        "command": "elara.optimizeCode",
        "title": "Elara: Optimize This Code"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "elara-family",
          "title": "Elara AI Family",
          "icon": "media/elara-icon.svg"
        }
      ]
    },
    "views": {
      "elara-family": [
        {
          "type": "webview",
          "id": "elara.chatView",
          "name": "Chat"
        },
        {
          "id": "elara.familyTree",
          "name": "Family Members"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "elara.explainCode",
          "group": "elara@1",
          "when": "editorHasSelection"
        },
        {
          "command": "elara.fixCode",
          "group": "elara@2",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "Elara AI Family",
      "properties": {
        "elara.apiUrl": {
          "type": "string",
          "default": "http://localhost:4010",
          "description": "Elara AI Family API URL"
        },
        "elara.defaultMember": {
          "type": "string",
          "default": "elara",
          "enum": ["elara", "themba", "naledi", "jabari", "amara", "sankofa", "kofi", "zola", "abeni", "thembo", "nexus"],
          "description": "Default AI family member to chat with"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "install:local": "code --install-extension elara-ai-family-1.0.0.vsix"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.22.0"
  }
}
