{
  "name": "elara-ai-family",
  "displayName": "Elara AI Family",
  "description": "AI-powered coding assistant with Ubuntu philosophy - Meet Elara and her family",
  "version": "1.0.0",
  "publisher": "azora",

  "repository": {
    "type": "git",
    "url": "https://github.com/Sizwe780/azora-os.git"
  },
  "homepage": "https://azora.world",
  "bugs": {
    "url": "https://github.com/Sizwe780/azora-os/issues"
  },
  "keywords": [
    "ai",
    "assistant",
    "ubuntu",
    "education",
    "coding",
    "chat",
    "family",
    "elara",
    "constitutional-ai"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "galleryBanner": {
    "color": "#9333EA",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "AI",
    "Education",
    "Programming Languages"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "elara.openChat",
        "title": "Chat with Elara",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "elara.selectFamily",
        "title": "Choose AI Family Member",
        "icon": "$(organization)"
      },
      {
        "command": "elara.explainCode",
        "title": "Elara: Explain This Code"
      },
      {
        "command": "elara.fixCode",
        "title": "Elara: Fix This Code"
      },
      {
        "command": "elara.optimizeCode",
        "title": "Elara: Optimize This Code"
      },
      {
        "command": "azora.queryKnowledge",
        "title": "Azora: Query Knowledge Ocean",
        "icon": "$(book)"
      },
      {
        "command": "azora.showStats",
        "title": "Azora: Show Knowledge Stats",
        "icon": "$(graph)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "elara-family",
          "title": "Elara AI Family",
          "icon": "media/elara-icon.png"
        }
      ]
    },
    "views": {
      "elara-family": [
        {
          "type": "webview",
          "id": "elara.chatView",
          "name": "Chat",
          "icon": "$(comment-discussion)"
        },
        {
          "id": "elara.familyTree",
          "name": "Family Members",
          "icon": "$(organization)"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "elara.explainCode",
          "group": "elara@1",
          "when": "editorHasSelection"
        },
        {
          "command": "elara.fixCode",
          "group": "elara@2",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "Elara AI Family",
      "properties": {
        "elara.apiUrl": {
          "type": "string",
          "default": "http://localhost:3001",
          "description": "Elara AI Family API URL"
        },
        "elara.knowledgeOceanUrl": {
          "type": "string",
          "default": "http://localhost:4040",
          "description": "Knowledge Ocean API URL"
        },
        "elara.aiKnowledgeBaseUrl": {
          "type": "string",
          "default": "http://localhost:4010",
          "description": "AI Knowledge Base API URL"
        },
        "elara.autoStartServices": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start Azora services on activation"
        },
        "elara.defaultMember": {
          "type": "string",
          "default": "elara",
          "enum": [
            "elara",
            "themba",
            "naledi",
            "jabari",
            "amara",
            "sankofa",
            "kofi",
            "zola",
            "abeni",
            "thembo",
            "nexus"
          ],
          "description": "Default AI family member to chat with"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "install:local": "code --install-extension elara-ai-family-1.0.0.vsix"
  },
  "devDependencies": {
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^2.32.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.13.2"
  }
}