{
  "version": 2,
  "name": "azora-os",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_APP_NAME": "Azora OS",
    "NEXT_PUBLIC_APP_URL": "https://azora-os.vercel.app"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_APP_NAME": "Azora OS"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "memory": 3008,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/sapiens/:path*",
      "destination": "/app/sapiens/:path*"
    },
    {
      "source": "/campus/:path*",
      "destination": "/app/campus/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Powered-By",
          "value": "Azora OS"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    }
  ]
}
