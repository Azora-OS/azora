# Production Environment Configuration
NODE_ENV=production
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@postgres-prod:5432/education_db
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_TIMEOUT=30000

# Redis
REDIS_URL=redis://redis-prod:6379/0
REDIS_PASSWORD=your-redis-password
REDIS_TLS=true

# API Keys
ELARA_API_KEY=your-elara-api-key
ELARA_API_URL=https://api.elara.azora.io
KNOWLEDGE_OCEAN_API_KEY=your-knowledge-ocean-api-key
KNOWLEDGE_OCEAN_API_URL=https://api.knowledge-ocean.azora.io
CONSTITUTIONAL_AI_API_KEY=your-constitutional-ai-api-key
CONSTITUTIONAL_AI_API_URL=https://api.constitutional-ai.azora.io

# Payment Processing
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_API_VERSION=2023-10-16

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=your-sentry-dsn

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Security
JWT_SECRET=your-jwt-secret
JWT_EXPIRY=24h
CORS_ORIGIN=https://app.azora.io
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Features
ENABLE_AI_TUTORING=true
ENABLE_KNOWLEDGE_OCEAN=true
ENABLE_CONSTITUTIONAL_AI=true
ENABLE_ANALYTICS=true
ENABLE_CAREER_SERVICES=true

# Performance
CACHE_TTL=3600
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
QUERY_TIMEOUT=30000

# Email
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@azora.io

# CDN
CDN_URL=https://cdn.azora.io
CDN_BUCKET=education-content
CDN_REGION=us-east-1

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
