generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Loan {
  id              String   @id @default(uuid())
  borrowerId      String
  amount          Float
  currency        String   @default("AZR")
  interestRate    Float
  term            Int
  status          String   @default("pending")
  collateralId    String?
  disbursedAt     DateTime?
  dueDate         DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  collateral      Collateral? @relation(fields: [collateralId], references: [id])
  repayments      Repayment[]

  @@index([borrowerId])
  @@index([status])
  @@map("loans")
}

model Collateral {
  id              String   @id @default(uuid())
  loanId          String?
  type            String
  value           Float
  currency        String   @default("AZR")
  status          String   @default("active")
  createdAt       DateTime @default(now())

  loans           Loan[]

  @@map("collaterals")
}

model Repayment {
  id              String   @id @default(uuid())
  loanId          String
  amount          Float
  currency        String   @default("AZR")
  status          String   @default("pending")
  dueDate         DateTime
  paidAt          DateTime?
  createdAt       DateTime @default(now())

  loan            Loan     @relation(fields: [loanId], references: [id])

  @@index([loanId])
  @@map("repayments")
}
