// Azora Mint - Complete Database Schema
// Constitutional Financial Engine

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Management
model User {
  id            String   @id @default(cuid())
  azoraId       String   @unique
  walletAddress String   @unique
  email         String?  @unique
  kycStatus     KycStatus @default(PENDING)
  creditScore   Int      @default(500)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  balances      UserBalance[]
  rewards       KnowledgeReward[]
  transactions  Transaction[]
  stakes        Stake[]
  loans         Loan[]
  cards         VirtualCard[]
  subscriptions Subscription[]
  invoices      Invoice[]

  @@map("users")
}

// Wallet & Balances
model UserBalance {
  id           String  @id @default(cuid())
  userId       String
  currencyCode String
  amount       Decimal @db.Decimal(20, 8)
  locked       Decimal @default(0) @db.Decimal(20, 8)

  user         User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, currencyCode])
  @@map("user_balances")
}

// Transactions
model Transaction {
  id              String          @id @default(cuid())
  userId          String
  type            TransactionType
  amount          Decimal         @db.Decimal(20, 8)
  currency        String
  status          TransactionStatus @default(PENDING)
  fromAddress     String?
  toAddress       String?
  txHash          String?         @unique
  metadata        Json?
  createdAt       DateTime        @default(now())
  completedAt     DateTime?

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("transactions")
}

// Knowledge Rewards (Proof-of-Knowledge)
model KnowledgeReward {
  id                 String           @id @default(cuid())
  userId             String
  rewardAmount       Decimal          @db.Decimal(20, 8)
  currencyCode       String
  sourceTrxId        String           @unique
  achievement        String?
  courseId           String?
  moduleId           String?
  transactionHash    String?
  status             RewardStatus     @default(PENDING)
  createdAt          DateTime         @default(now())
  processedAt        DateTime?

  user               User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("knowledge_rewards")
}

// Staking
model Stake {
  id              String      @id @default(cuid())
  userId          String
  amount          Decimal     @db.Decimal(20, 8)
  currency        String
  apy             Decimal     @db.Decimal(5, 2)
  startDate       DateTime    @default(now())
  endDate         DateTime?
  status          StakeStatus @default(ACTIVE)
  rewardsEarned   Decimal     @default(0) @db.Decimal(20, 8)
  lastRewardAt    DateTime?

  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@map("stakes")
}

// Lending
model Loan {
  id              String      @id @default(cuid())
  userId          String
  amount          Decimal     @db.Decimal(20, 8)
  currency        String
  interestRate    Decimal     @db.Decimal(5, 4)
  collateral      Decimal     @db.Decimal(20, 8)
  totalRepay      Decimal     @db.Decimal(20, 8)
  repaidAmount    Decimal     @default(0) @db.Decimal(20, 8)
  status          LoanStatus  @default(ACTIVE)
  purpose         String?
  disbursedAt     DateTime    @default(now())
  dueDate         DateTime
  repaidAt        DateTime?

  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@map("loans")
}

// Virtual Cards
model VirtualCard {
  id              String      @id @default(cuid())
  userId          String
  cardNumber      String      @unique
  cardHash        String      @unique
  expiry          String
  cvvHash         String
  balance         Decimal     @db.Decimal(20, 8)
  currency        String
  type            CardType    @default(VIRTUAL)
  status          CardStatus  @default(ACTIVE)
  dailyLimit      Decimal     @db.Decimal(20, 8)
  transactionLimit Decimal    @db.Decimal(20, 8)
  createdAt       DateTime    @default(now())
  lastUsedAt      DateTime?

  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@map("virtual_cards")
}

// Subscriptions
model Subscription {
  id              String      @id @default(cuid())
  userId          String
  planId          String
  status          SubscriptionStatus @default(ACTIVE)
  startDate       DateTime    @default(now())
  endDate         DateTime?
  nextBillingDate DateTime
  amount          Decimal     @db.Decimal(20, 8)
  currency        String
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@map("subscriptions")
}

// Invoices
model Invoice {
  id              String      @id @default(cuid())
  userId          String
  subscriptionId  String?
  amount          Decimal     @db.Decimal(20, 8)
  currency        String
  description     String?
  status          InvoiceStatus @default(PENDING)
  dueDate         DateTime
  paidAt          DateTime?
  createdAt       DateTime    @default(now())

  user            User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@map("invoices")
}

// Exchange Rates
model ExchangeRate {
  id              String      @id @default(cuid())
  fromCurrency    String
  toCurrency      String
  rate            Decimal     @db.Decimal(20, 8)
  timestamp       DateTime    @default(now())

  @@unique([fromCurrency, toCurrency, timestamp])
  @@index([fromCurrency, toCurrency])
  @@map("exchange_rates")
}

// Audit Logs
model AuditLog {
  id              String      @id @default(cuid())
  userId          String?
  action          String
  entity          String
  entityId        String?
  details         Json?
  ipAddress       String?
  userAgent       String?
  timestamp       DateTime    @default(now())

  @@index([userId, timestamp])
  @@index([entity, entityId])
  @@map("audit_logs")
}

// Enums
enum KycStatus {
  PENDING
  VERIFIED
  FLAGGED
  REJECTED
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
  TRANSFER
  REWARD
  STAKE
  UNSTAKE
  LOAN_DISBURSEMENT
  LOAN_REPAYMENT
  CARD_LOAD
  CARD_SPEND
  SUBSCRIPTION
  INVOICE_PAYMENT
}

enum TransactionStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum RewardStatus {
  PENDING
  COMPLETED
  FAILED
}

enum StakeStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}

enum LoanStatus {
  PENDING
  ACTIVE
  REPAID
  DEFAULTED
  CANCELLED
}

enum CardType {
  VIRTUAL
  PHYSICAL
}

enum CardStatus {
  ACTIVE
  FROZEN
  CANCELLED
  EXPIRED
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  SUSPENDED
}

enum InvoiceStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}
