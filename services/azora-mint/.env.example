# Azora Mint Service Configuration
PORT=3080
NODE_ENV=development

# Database
DATABASE_URL="postgresql://azora:password@localhost:5432/azora_mint"

# Security
JWT_SECRET="azora-mint-jwt-secret-change-in-production"
CORS_ORIGIN="http://localhost:3000,http://localhost:3001,http://localhost:3002"

# API Gateway
API_GATEWAY_URL="http://localhost:4000"

# Blockchain
BLOCKCHAIN_NETWORK="testnet"
PRIVATE_KEY="your-blockchain-private-key"

# External Services
AZORA_LMS_URL="http://localhost:4015"
AZORA_FORGE_URL="http://localhost:3200"

# Economic Policy
MAX_SUPPLY=1000000000
INITIAL_MINING_RATE=10
STAKING_REWARD_RATE=0.05