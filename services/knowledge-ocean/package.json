{
  "name": "knowledge-ocean",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest --runInBand",
    "test:e2e": "jest --runInBand test/e2e.roundtrip.test.ts",
    "db:push": "cd ../../ && npx prisma@7.0.1 db push --config prisma.config.cjs --accept-data-loss --force-reset",
    "prisma7:push": "npx prisma@7.0.1 db push --config prisma.config.cjs --accept-data-loss --force-reset",
    "prisma7:generate": "npx prisma@7.0.1 generate --config prisma.config.cjs",
    "postinstall": "npx prisma@7.0.1 generate --config prisma.config.cjs",
    "ci-roundtrip": "node ./test/roundtrip.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "body-parser": "^1.20.2",
    "jsonwebtoken": "^9.0.0",
    "chokidar": "^3.5.3",
    "pino": "^8.0.0",
    "axios": "^1.5.0",
    "pg": "^8.11.0",
    "@prisma/client": "^7.0.1",
    "prisma": "^7.0.1"
  },
  "devDependencies": {
    
    "@types/express": "^4.17.21",
    "@types/body-parser": "^1.19.2",
    "@types/jsonwebtoken": "^9.0.2",
    "typescript": "^5.0.0",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  }
}
