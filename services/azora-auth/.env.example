# Server Configuration
PORT=4004
NODE_ENV=development

# JWT Configuration (RS256 keys should be loaded from secure storage in production)
JWT_ALGORITHM=RS256
TOKEN_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=7d

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:4004/api/oauth/google/callback

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GITHUB_REDIRECT_URI=http://localhost:4004/api/oauth/github/callback

# Database (if needed)
DATABASE_URL=postgresql://user:password@localhost:5432/azora_auth

# Redis (for token revocation in production)
REDIS_URL=redis://localhost:6379

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
