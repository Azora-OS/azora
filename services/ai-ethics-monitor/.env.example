# AI Ethics Monitor Service Environment Configuration
# Production environment variables for Azora OS AI Ethics & Bias Monitoring Service

# Application Configuration
NODE_ENV=production
PORT=3005
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://postgres:azora2024@localhost:5432/azora_ethics?schema=public

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Queue Configuration
MONITORING_QUEUE_NAME=ai-ethics-monitoring
AUDIT_QUEUE_NAME=ai-ethics-audit

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Security Configuration
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# AI Ethics Configuration
AZORA_CONSTITUTION_ENABLED=true
BIAS_DETECTION_THRESHOLD=0.7
FAIRNESS_CHECK_ENABLED=true
TRANSPARENCY_LOGGING_ENABLED=true
AUDIT_RETENTION_DAYS=365
INTERVENTION_AUTO_TRIGGER=true

# Metrics Configuration
METRICS_AGGREGATION_INTERVAL=24h
METRICS_RETENTION_DAYS=90

# Model Training Configuration
MODEL_RETRAINING_INTERVAL=7d
MODEL_PERFORMANCE_THRESHOLD=0.85
TRAINING_DATA_RETENTION_DAYS=30

# Constitutional Principles Configuration
PRIVACY_PROTECTION_ENABLED=true
EQUALITY_FAIRNESS_ENABLED=true
TRANSPARENCY_ACCOUNTABILITY_ENABLED=true
HUMAN_CENTRIC_DESIGN_ENABLED=true
AFRICAN_SOVEREIGNTY_ENABLED=true
POSITIVE_IMPACT_FOCUS_ENABLED=true

# Alert Configuration
ALERT_EMAIL_ENABLED=false
ALERT_SLACK_ENABLED=false
ALERT_WEBHOOK_ENABLED=false
HIGH_RISK_ALERT_THRESHOLD=0.8
CRITICAL_RISK_ALERT_THRESHOLD=0.9

# External Service Integration
AI_MODEL_SERVICE_URL=http://localhost:3001
OPENAI_SERVICE_URL=http://localhost:3002
CONTENT_GENERATION_SERVICE_URL=http://localhost:3003
PERSONALIZATION_ENGINE_URL=http://localhost:3004

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30s
METRICS_EXPORT_ENABLED=true
METRICS_EXPORT_INTERVAL=60s
LOG_ROTATION_MAX_SIZE=10m
LOG_ROTATION_MAX_FILES=5

