# Aegis Premium Configuration

# Server
NODE_ENV=development
PORT=4010

# Database
DATABASE_URL=postgresql://aegis:aegis_secure@localhost:5432/aegis_db

# Redis
REDIS_URL=redis://localhost:6379

# Security
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Alerts
ALERT_EMAIL=security@azora.world
ALERT_WEBHOOK=https://your-webhook-url

# Constitutional AI
CONSTITUTIONAL_MODE=strict
UBUNTU_ENFORCEMENT=enabled

# Threat Intelligence
THREAT_DB_UPDATE_INTERVAL=3600000
THREAT_SCORE_THRESHOLD=70

# Incident Response
AUTO_ESCALATE_CRITICAL=true
INCIDENT_RETENTION_DAYS=90

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
