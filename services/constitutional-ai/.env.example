# Constitutional AI Service Configuration

# Ubuntu Validation
UBUNTU_ENABLED=true
UBUNTU_THRESHOLD=70
UBUNTU_COLLECTIVE_BENEFIT_WEIGHT=0.33
UBUNTU_KNOWLEDGE_SHARING_WEIGHT=0.33
UBUNTU_INCLUSIVE_DESIGN_WEIGHT=0.34

# Bias Detection
BIAS_DETECTION_ENABLED=true
BIAS_SEVERITY_THRESHOLD=medium
AUTO_MITIGATE_BIAS=true
BIAS_CONFIDENCE_THRESHOLD=0.7
BIAS_MITIGATION_STRATEGY=rephrase

# Privacy Filter
PRIVACY_FILTER_ENABLED=true
PII_REDACTION_ENABLED=true
PII_REDACTION_PATTERN=[REDACTED]
PII_PRESERVE_FORMAT=false
PII_TYPES=email,phone,ssn,address,name,credit_card,ip_address,date_of_birth

# Harm Prevention
HARM_PREVENTION_ENABLED=true
HARM_SEVERITY_THRESHOLD=5
BLOCK_HARMFUL_CONTENT=true
HARM_TYPES=violence,hate_speech,self_harm,illegal,misinformation,exploitation,harassment,dangerous_content

# Audit Logging
AUDIT_LOGGING_ENABLED=true
AUDIT_LOG_RETENTION=90
AUDIT_LOG_ENCRYPTION=true

# Performance
VALIDATION_TIMEOUT=5000
PARALLEL_VALIDATION=true
MAX_CONCURRENT_VALIDATIONS=100

# Compliance
MIN_COMPLIANCE_SCORE=70
STRICT_MODE=false
REGENERATE_ON_FAILURE=true

# Service Configuration
SERVICE_PORT=3010
SERVICE_HOST=localhost
NODE_ENV=development

# Database (for audit logs)
DATABASE_URL=postgresql://user:password@localhost:5432/azora_constitutional_ai

# Redis (for caching)
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=constitutional_ai:

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
