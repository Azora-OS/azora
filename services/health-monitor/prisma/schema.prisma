// Azora OS - health-monitor Database Schema
// Ubuntu: "My data strengthens our foundation"

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model Log {
  id        String   @id @default(uuid())
  level     LogLevel
  message   String
  service   String
  metadata  Json?
  createdAt DateTime @default(now())
  
  @@index([service])
  @@index([level])
  @@index([createdAt])
  @@map("logs")
}

enum LogLevel {
  DEBUG
  INFO
  WARN
  ERROR
  FATAL
}

// Constitutional Compliance
model ConstitutionalLog {
  id        String   @id @default(uuid())
  action    String
  userId    String?
  metadata  Json?
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([createdAt])
  @@map("constitutional_logs")
}
