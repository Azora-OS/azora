{
  "name": "azora",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "packages/@*/*",
    "services/*",
    "apps/*",
    "azstudio/*"
  ],
  "scripts": {
    "build:all": "npm run build --workspaces",
    "test:all": "npm run test --workspaces",
    "bootstrap": "npm ci && npm run azstudio:bootstrap",
    "bootstrap:win": "powershell -ExecutionPolicy Bypass -File scripts\\install-win-build-tools.ps1 -Force || true && npm run azstudio:bootstrap",
    "azstudio:bootstrap": "cd azstudio && npm install && npm run install-build-deps",
    "prisma7:generate": "npx prisma@7.0.1 generate --config prisma.config.ts",
    "prisma7:push": "npx prisma@7.0.1 db push --config prisma.config.ts --accept-data-loss --force-reset",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:full": "jest --coverage",
    "test:watch": "jest --watch",
    "load:test": "k6 run tests/performance/load-test.js",
    "load:100": "k6 run --vus 100 --duration 5m tests/performance/load-test.js",
    "load:1000": "k6 run --vus 1000 --duration 5m tests/performance/load-test.js",
    "load:10000": "k6 run --vus 10000 --duration 5m tests/performance-load-test.js",
    "validate:staging": "ts-node tests/performance/run-staging-validation.ts",
    "validate:load": "k6 run tests/performance/load-tests-staging.ts",
    "validate:monitoring": "ts-node tests/performance/monitoring-validation.ts",
    "validate:autoscaling": "ts-node tests/performance/autoscaling-test.ts",
    "validate:dr": "ts-node tests/performance/disaster-recovery-test.ts",
    "deploy:pre-check": "ts-node scripts/pre-deployment-check.ts",
    "deploy:production": "bash scripts/production-deploy.sh",
    "deploy:post-check": "ts-node scripts/post-deployment-check.ts",
    "optimize:production": "ts-node scripts/production-optimization.ts",
    "improve:continuous": "ts-node scripts/continuous-improvement.ts",
    "migrate:azstudio": "powershell -ExecutionPolicy Bypass -File scripts\\azstudio-migration\\migrate-to-azstudio.ps1",
    "archive:azstudio": "powershell -ExecutionPolicy Bypass -File scripts\\azstudio-migration\\archive-azstudio.ps1",
    "rename:vscode-to-azstudio": "powershell -ExecutionPolicy Bypass -File scripts\\azstudio-migration\\rename-azstudio-vscode.ps1",
    "azstudio:ci-check-env": "cd azstudio && npm run ci-check-env",
    "setup:win": "powershell -ExecutionPolicy Bypass -File scripts/setup-dev.ps1 -Bootstrap -Compile",
    "setup:unix": "bash scripts/setup-dev.sh --bootstrap --compile"
  },
  "devDependencies": {
    "@babel/preset-env": "7.28.5",
    "@babel/preset-typescript": "7.28.5",
    "@types/jest": "30.0.0",
    "@types/supertest": "2.0.12",
    "babel-jest": "30.2.0",
    "jest": "30.2.0",
    "prisma": "^7.0.1",
    "supertest": "6.3.4",
    "ts-jest": "29.4.5",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^7.0.1",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "express": "4.18.2",
    "helmet": "7.1.0",
    "uuid": "9.0.1"
  }
}
