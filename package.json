{
  "name": "azora-os",
  "version": "3.0.0",
  "description": "Constitutional AI Operating System - Ubuntu Philosophy Meets Quantum Technology",
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:gateway": "cd services/api-gateway && npm run dev",
    "dev:auth": "cd services/auth-service && npm run dev",
    "dev:education": "cd services/azora-education && npm run dev",
    "dev:mint": "cd services/azora-mint && npm run dev",
    "dev:forge": "cd services/azora-forge && npm run dev",
    "dev:sapiens": "cd services/azora-sapiens && npm run dev",
    "dev:family": "cd services/ai-family-service && npm run dev",
    "build": "npm run build:services && npm run build:apps",
    "build:services": "lerna run build --scope='@azora/services-*'",
    "build:apps": "lerna run build --scope='@azora/apps-*'",
    "test": "jest --coverage",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "npx playwright test",
    "test:watch": "jest --watch",
    "test:services": "jest services/",
    "test:metrics": "ts-node scripts/test-metrics.ts",
    "db:setup": "node scripts/db-setup.js",
    "db:seed": "ts-node prisma/seed.ts",
    "db:migrate": "lerna run migrate --scope='@azora/services-*'",
    "db:generate": "lerna run generate --scope='@azora/services-*'",
    "db:studio": "npx prisma studio",
    "db:backup": "bash scripts/db-backup.sh",
    "db:restore": "bash scripts/db-restore.sh",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "cleanup:production": "node scripts/cleanup-production.js",
    "cleanup:dry-run": "node scripts/cleanup-production.js --dry-run",
    "verify:structure": "node scripts/verify-structure.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "security:audit": "node scripts/security-audit.js",
    "security:test": "jest tests/security",
    "security:scan": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix"
  },
  "keywords": [
    "constitutional-ai",
    "ubuntu",
    "education",
    "finance",
    "marketplace",
    "blockchain",
    "ai"
  ],
  "author": "Sizwe - Azora ES (Pty) Ltd",
  "license": "PROPRIETARY",
  "devDependencies": {
    "@faker-js/faker": "^8.4.0",
    "@playwright/test": "^1.40.1",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "1.8.1",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.5",
    "@types/helmet": "4.0.0",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "20.19.25",
    "@types/supertest": "6.0.3",
    "@types/uuid": "10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-security": "^2.1.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "lerna": "^8.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.8.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^5.8.0",
    "bcrypt": "^5.1.1",
    "express-rate-limit": "8.2.1",
    "zod": "^3.23.8"
  },
  "workspaces": [
    "services/*",
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
